<%- include('./includes/header.ejs') %>
</head>
<body>
    <main>
        <div class="centered">
            <h1>What do you have in your fridge <%=username %>?</h1>
            <form action="/recipes/add-ingredients" method="POST">
                <input type="text" name="description" class="box">
                <input type="hidden" name="userid" value=<%=userid %>>
                <button type="submit"class="btn">Add it</button>
            </form>
            <% if (hasIngredients) { %>
                <% ingredients.forEach(i => { %>
                <div class="ingredients">
                <%= i.description %>
                <a href="/recipes/delete/?id=<%=i.id%>" class="delicon"><i class="fa-solid fa-trash-can fa-sm" style="color: #e74b4b;"></i></a>
                </div>
                <% }); %>
            <% } %>
            <form action="/recipes/generate" method="POST">
                <input type="hidden" name="uid" value="<%=userid %>">
                <button type="submit" class="gbtn">Get me Ideas</button>
            </form>
            <a href="/recipes/login"><i class="fa-solid fa-arrow-right-from-bracket" style="color:red;font-size:30px;"></i></a>
        </div>
    </main>
</body>
</html>